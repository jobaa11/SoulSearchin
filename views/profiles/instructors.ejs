<%- include('../partials/header') %>

    <h1>Instructor</h1>

    <form id="form1" class="profile-form" action="/profiles/instructors" method="POST">
        <section>
            <div>
                <label for="username">Username</label>
                <input type="text" id="username" placeholder="Enter your username" name="username" form="from1">
                <label for="location">Location</label>
                <input type="text" id="location" name="location" placeholder="Enter Location"
                    autocomplete="country-name" form="form1">
            </div>
            <div>
                <label for="instruments">Instruments</label>
                <section id="instruments" name="instruments">
                    <input id="instruments" type="number" name="instruments" min="1" max="3" form="form1">
                    <% instruments.forEach(function(instrument, idx) { %>
                        <option value="<%= instrument %>" <%=idx===0 ? 'selected' : '' %>>
                            <%= instrument %>
                        </option>
                        <% }) %>
                </section>

                <label for="genres">Styles Taught</label>
                <section id="genres" name="genres">
                    <input id="genres" type="hidden" form="form1">
                    <% genres.forEach(function(genres, idx) { %>
                        <option value="<%= genre %>" <%=idx===0 ? 'selected' : '' %>>
                            <%= genre %>
                        </option>
                        <% }) %>
                </section>
                <label for="budget">Budget</label>
                <input type="number" name="budget" id="budget" min="1" step="any" form="form1">
                <label for="available"></label>
                <input id="available" type="datetime-local" name="availablity" min="2" max="5" form="form1">
            </div>
        </section>
    </form>


    <%- include('../partials/footer') %>