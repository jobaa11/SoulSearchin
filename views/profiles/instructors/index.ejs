<%- include('../../partials/header') %>



    <% if (user && profile) { %>
        <% profiles.forEach(function(p) { %>
            <section class="show" id="show-page">
                <div class="app">
                    <h1>
                        <%= p.title %>
                    </h1>
                </div>
                <div class="">Name: </div>
                <div>
                    <%= p.nickname %>
                </div>
                <div>Location: </div>
                <div>
                    <%= p.location %>
                </div>
            </section>
            <a class="" href="/profiles/instructors/<%= p._id %>"><button class="create">View Instructor
                    Profile</button></a>
            <% }) %>

                <% } %>

                    <% if (user && !profile.isInstructor) { %>
                        <section class="section" id="show-page">
                            <div class="newInstr">
                                <h1>
                                    <%= profile.title %>
                                </h1>
                            </div>
                            <div>Name: </div>
                            <div>
                                <%= profile.nickname %>
                            </div>
                            <div>Location: </div>
                            <div>
                                <%= profile.location %>
                            </div>
                            <div>Bio: </div>
                            <div>
                                <%= profile.bio %>
                            </div>
                            <div>Instruments: </div>
                            <div>
                                <% profile.instruments.forEach(function(i) { %>
                                    <div>
                                        <%= i.name %>
                                    </div>
                                    <% }) %>

                            </div>
                            <div>Skill: </div>
                            <div>
                                <%= profile.skillLevel %>
                            </div>
                            <!-- <div>Instructors: </div> -->
                            <div>
                                <% profile.chosenInstructors.forEach(function(i) { %>
                                    <div>
                                        <%= i.name %>
                                            <button>FIRE!</button>
                                    </div>

                                    <% }) %>
                            </div>
                            <div>Interest: </div>
                            <div>
                                <%= profile.interest %>
                            </div>
                        </section>
                        <% } %>
                            <form action="/profiles/student/<%= profile._id %>?_method=DELETE" method="POST">
                                <button class="create" type="submit">DELETE ACCOUNT</button>
                            </form>

                            <%- include('../../partials/nav-footer') %>