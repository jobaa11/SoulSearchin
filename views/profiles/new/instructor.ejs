<%- include('../../partials/header') %>

    <h1>Instructor</h1>

    <form id="form1" class="create-instructor-profile" action="/profiles/new/instructors" method="POST">
        <section class="allapp">
            <div class="topapp">
                <label for="nickname">Nickname:</label>
                <input type="text" id="nickname" placeholder="Enter your username" name="nickname" autocomplete="off" autocapitalize="words">
                <label for="location">Location:</label>
                <input type="text" id="location" name="location" placeholder="Enter City/State"
                    autocomplete="country-name" autocapitalize="words">
                <label for="bio">Bio:</label>
                <textarea autocapitalize="sentences" id="bio" name="bio" cols="15" rows="10">Tell us about yourself</textarea>
            </div>
            <div class="bottomapp">
                <label for="instruments">Instruments:</label>
                <select id="instruments" name="instruments" multiple="3">
                    <% instruments.forEach(function(i) { %>
                        <option value="<%= i._id %>">
                            <%= i.name %>
                        </option>
                        <% }) %>
                </select>

                <label for="genres">Styles Taught:</label>
                <select id="genres" name="genres">
                    <option value="R&B">R&B</option>
                    <option value="FUNK">Funk</option>
                    <option value="JAZZ">Jazz</option>
                    <option value="POP">Pop</option>
                    <option value="ROCK">Rock</option>
                    <option value="BOSSA">Bossa Nova</option>
                </select>
                <label for="budget">Budget: </label>
                <input type="number" name="budget" id="budget">
            </div>
        </section>
        <input type="submit" value="submit">
    </form>


    <%- include('../../partials/footer') %>